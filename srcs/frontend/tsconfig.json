{
  "compilerOptions": {
    "target": "es6",                  // transpile modern JS down to ES6
    "module": "es6",                  // ES module output (Vite expects this)
    "outDir": "./dist",               // compiled JS (not used by Vite, but fine)
    "rootDir": ".",                   // base dir for TS sources
    "strict": true,                   // strict type-checking
    "esModuleInterop": true,          // allows default import from CommonJS
    "moduleResolution": "node",       // how TS looks up modules (Node-style)
    "jsx": "react-jsx"                // enables .tsx (React 17+ JSX transform)
  },
  "include": ["src"]
}